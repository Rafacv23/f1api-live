---
import { redirect } from '@/lib/utils'

interface Props {
    year: number
}

const {year} = Astro.props
---


<nav class="my-4 flex space-x-4">
    <a 
    href={redirect(year)}
    class="flex-shrink-0 border border-secondary text-secondary px-4 py-2 rounded-lg hover:bg-secondary hover:text-primary hover:transition"
    >
    Races
    </a>
    <a 
    href={`${redirect(year)}/standings/drivers`} 
    class="flex-shrink-0 border border-secondary text-secondary px-4 py-2 rounded-lg hover:bg-secondary hover:text-primary hover:transition"
    >
    Drivers
    </a>
    <a 
    href={`${redirect(year)}/standings/teams`} 
    class="flex-shrink-0 border border-secondary text-secondary px-4 py-2 rounded-lg hover:bg-secondary hover:text-primary hover:transition"
    >
    Teams
    </a>
</nav>